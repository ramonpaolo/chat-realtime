<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Room</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />

    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: "Roboto";
      }
      body {
        margin: 0;
      }
      .hiden {
        display: none;
      }
      ul,
      li {
        list-style-type: none;
        font-size: 16px;
        font-family: "Roboto";
        font-weight: bold;
      }
      .new-user {
        animation: newUser infinite 5s;
        color: transparent;
        background-image: linear-gradient(
          120deg,
          #f33a12,
          #d9e60d,
          #16f111,
          #11dcf1,
          #110ef1,
          #ee0eed
        );
        background-size: 300%;
        -webkit-background-clip: text;
      }
      @keyframes newUser {
        0% {
          background-position: 0%;
        }
        50% {
          background-position: 100%;
        }
        100% {
          background-position: 0%;
        }
      }

      .field-input {
        width: 95%;
        height: 5vh;
        background-color: white;
        text-align: center;
        justify-content: center;
        position: fixed;
        display: block;
        bottom: 6px;
        margin-left: 3%;
      }

      input {
        width: 80%;
        height: 100%;
        border: 2px #2b2b2b solid;
        border-radius: 6px;
        padding-left: 12px;
      }

      button {
        width: 19%;
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: white;
        border: 2px #2b2b2b solid;
        border-radius: 12px;
        cursor: pointer;
        color: #2b2b2b;
        font-weight: bold;
        font-size: 18px;
      }

      .messages {
        width: 90%;
        margin-left: 10%;
        margin-top: 32px;
        word-wrap: break-word;
        overflow-wrap: break-word;
        margin-bottom: 5vh;
      }
    </style>
  </head>
  <body>
    <div>
      <h1>Room</h1>
      <input type="text" maxlength="6" max="6" />
    </div>
    <div class="hiden">
      <div class="messages">
        <ul></ul>
      </div>
      <div class="field-input">
        <input type="text" placeholder="Mensagem aqui" />
        <button type="button" accesskey="Enter">Enviar</button>
      </div>
    </div>
  </body>
  <script src="/scripts/socket.io.js"></script>
  <script>
    const socket = new io();

    let numberRoom = 0;
    let userLogged = false;

    (async () => {
      try {
        numberRoom = window.location.href.split("code")[1].split("=")[1];

        userLogged = true;

        socket.emit("data-" + numberRoom, {
          message: "Usuário entrou no chat",
        });

        document.getElementsByTagName("div")[0].remove();
        document.getElementsByTagName("div")[0].className = "active";

        addEvent();

        // removedLoginRoom();
      } catch (error) {
        document.addEventListener("keypress", function doc(e) {
          document
            .getElementsByTagName("input")[0]
            .addEventListener("input", (e) => {
              numberRoom = e.target.value;
              console.log(numberRoom);
            });
          console.log("Oi");
          console.log(numberRoom.toString().length);
          console.log(e.key);
          if (numberRoom.toString().length === 6 && e.key === "Enter") {
            userLogged = true;

            socket.emit("data-" + numberRoom, {
              message: "Usuário entrou no chat",
            });

            document.getElementsByTagName("div")[0].remove();
            document.getElementsByTagName("div")[0].className = "active";
            document.removeEventListener("keypress", doc);
            console.log("Removendo listener");
            addEvent();
          }
        });
        return;
      }
    })();

    let button = document.getElementsByTagName("button")[0];
    button.addEventListener("click", (e) => {
      console.log(e.currentTarget.getAttribute("accesskey"));
    });

    let input = "";

    function addEvent() {
      socket.on(`data-${numberRoom}`, addMessageInScreen);
      document
        .getElementsByTagName("input")[0]
        .addEventListener("input", (e) => {
          input = e.target.value;
        });

      document.addEventListener("keypress", function hotKey(e) {
        if (
          numberRoom.toString().length === 6 &&
          userLogged &&
          e.key === "Enter" &&
          input.toString().length >= 1
        ) {
          sendMessage();
        }
      });
    }

    function sendMessage() {
      socket.emit(`data-${numberRoom}`, {
        message: input,
      });
      document.getElementsByTagName("input")[0].value = "";
      let messages = document.getElementsByClassName("messages")[0];
      let el = document.createElement("li");
      el.textContent = input;
      messages.firstElementChild.appendChild(el);
      messages.firstElementChild.appendChild(document.createElement("br"));
      scrollToEnd()
    }

    function scrollToEnd() {
      document
        .getElementsByTagName("html")[0]
        .scrollTo(
          0,
          document.getElementsByClassName("messages")[0].scrollHeight
        );
    }

    function addMessageInScreen(message) {
      //129065
      let messages = document.getElementsByClassName("messages")[0];
      let el = document.createElement("li");
      el.textContent = message.message;
      if (message.message === "Usuário entrou no chat") {
        el.classList.add("new-user");
      }
      messages.firstElementChild.appendChild(el);
      messages.firstElementChild.appendChild(document.createElement("br"));
      scrollToEnd();
    }
  </script>
